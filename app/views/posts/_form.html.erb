<%= form_for @post, html: { multipart: true } do |f| %>
  <div >
  <%= f.label :title, :class => "font-weight-bold" %><br>
  </div>
  <div class="form-group">
  <%= f.text_field :title, placeholder: "Type the post title here", :class => "form-control" %><br>
  </div>
  <div>
  <%= f.label :content, :class => "font-weight-bold" %><br>
  </div>
  <div class="form-group">
  <%= f.text_area :content, placeholder: "Type the post tect here", :class => "form-control" %><br>
  </div>
  <div>
  <%= f.label :image, :class => "font-weight-bold" %><br>
  </div>
  <div class="form-group">
  <%= f.file_field :image, :class => "form-control-file col-sm-3 p-0"%><br>
  </div>
  <div class="form-group">
  <%= f.submit btn_label, :class => "btn btn-info" %>
  </div>
<% end %>